    "git:report": "node scripts/git-sync-monitor.js report",
    "git:sync": "git fetch origin && pnpm git:status",
    "git:cleanup": "node scripts/git-branch-cleanup.js",
    "git:cleanup-dry": "node scripts/git-branch-cleanup.js --dry-run",
    "git:hooks-install": "node scripts/setup-git-hooks.js install",
